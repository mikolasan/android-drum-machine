<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
        >
            <Button
                    android:text="Crash"
                    android:layout_width="120dp"
                    android:layout_height="120dp" android:id="@+id/btn_crash" android:textStyle="bold"
                    android:textSize="24sp" android:fontFamily="sans-serif-black" android:textAlignment="center"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="Hi Hat"
                    android:layout_width="120dp"
                    android:layout_height="120dp" tools:layout_editor_absoluteY="30dp"
                    tools:layout_editor_absoluteX="34dp" android:id="@+id/btn_hihat" android:textStyle="bold"
                    android:textSize="24sp" android:fontFamily="sans-serif-black" android:textAlignment="center"/>
            <Button
                    android:text="Tom"
                    android:layout_width="120dp"
                    android:layout_height="120dp" tools:layout_editor_absoluteY="30dp"
                    tools:layout_editor_absoluteX="143dp" android:id="@+id/btn_tom" android:textStyle="bold"
                    android:textSize="24sp" android:fontFamily="sans-serif-black" android:textAlignment="center"/>
            <Button
                    android:text="Ride"
                    android:layout_width="120dp"
                    android:layout_height="120dp" tools:layout_editor_absoluteY="30dp"
                    tools:layout_editor_absoluteX="255dp" android:id="@+id/btn_ride" android:textStyle="bold"
                    android:textSize="24sp" android:fontFamily="sans-serif-black" android:textAlignment="center"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="Snare"
                    android:layout_width="120dp"
                    android:layout_height="120dp" tools:layout_editor_absoluteY="105dp"
                    tools:layout_editor_absoluteX="34dp" android:id="@+id/btn_snare" android:textStyle="bold"
                    android:textSize="24sp" android:fontFamily="sans-serif-black" android:textAlignment="center"
                    android:background="@drawable/ic_snare"/>
            <Button
                    android:text="Kick"
                    android:layout_width="120dp"
                    android:layout_height="120dp" tools:layout_editor_absoluteY="105dp"
                    tools:layout_editor_absoluteX="143dp" android:id="@+id/btn_kick" android:textStyle="bold"
                    android:textSize="24sp" android:fontFamily="sans-serif-black" android:textAlignment="center"
                    android:background="@drawable/ic_kick"/>
            <Button
                    android:text="Floor"
                    android:layout_width="120dp"
                    android:layout_height="120dp" tools:layout_editor_absoluteY="105dp"
                    tools:layout_editor_absoluteX="255dp" android:id="@+id/btn_floor" android:textStyle="bold"
                    android:textSize="24sp" android:fontFamily="sans-serif-black" android:textAlignment="center"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"/>
    </TableLayout>

</android.support.constraint.ConstraintLayout>